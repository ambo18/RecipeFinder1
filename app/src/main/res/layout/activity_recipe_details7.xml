<!-- activity_recipe_details.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/recipe7" />

    <Button
        android:id="@+id/button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_favourite1"
        android:background="@android:color/transparent"
        android:contentDescription="Favorite" />

    <TextView
        android:id="@+id/recipe7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeImage"
        android:padding="16dp"
        android:text="Chicken Fajitas"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recipe7"
        android:layout_above="@id/buttonContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/ingredientsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 pound (450g) boneless, skinless chicken breasts, sliced"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 onion, sliced" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 bell pepper, sliced" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 tablespoons olive oil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 teaspoon chili powder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/2 teaspoon ground cumin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/2 teaspoon paprika" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/2 teaspoon garlic powder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salt and pepper to taste" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tortillas, for serving" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optional toppings: salsa, sour cream, guacamole, shredded cheese" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutrition Facts"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories: Around 250-350 calories"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohydrates: Approximately 10-15 grams" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein: Around 25-30 grams" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat: Approximately 10-15 grams" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <!-- Add additional buttons or actions as needed -->

    </LinearLayout>

</RelativeLayout>
